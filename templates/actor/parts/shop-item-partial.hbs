<div class="itemRow item rightmenu" data-item-id="{{item._id}}">
    <div class="per45 text-over">
        <img class="inv-image" src="{{item.img}}" alt="{{item.name}}">
        &nbsp;
        <a class="item-edit">
            {{item.name}}
        </a>
        |
        {{#if item.system.type}}
            {{localize (concat 'utopia.type.' item.system.type)}}
        {{/if}}
        {{#ifCond @root.actor.system.infStock "===" false}}
            x{{item.system.amount}}
        {{/ifCond}}
    </div>
    <div class="per45">
        {{#if @root.actor.system.isShop}}
            {{ localize 'utopia.shop.value' }}: {{item.system.value}}
        {{/if}}
    </div>
    <div class="per10">
        {{#if @root.actor.system.isShop}}
            <a class="shop-buy" title="{{ localize 'utopia.shop.buy' }}"><i class="fa-solid fa-basket-shopping"></i></a>
        {{else}}
            <a class="shop-buy" title="{{ localize 'utopia.shop.loot' }}"><i class="fa-solid fa-gem"></i></a>
        {{/if}}
    </div>
</div>